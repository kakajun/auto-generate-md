{
  "name": "agmd",
  "version": "0.3.7",
  "description": "auto generate markdown for node, Classification of engineering documents, Absolute path to relative path",
  "keywords": [
    "node",
    "auto",
    "generate",
    "relative path",
    "md",
    "classification",
    "markdown"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "typings": "lib/index.d.ts",
  "bin": {
    "agmd": "./bin/bin.js"
  },
  "scripts": {
    "cli": "ts-node src/bin.ts",
    "dev": "npx nodemon src/commands/agmd.ts",
    "agmd": "npx agmd --ignore lib,node_modules,dist --include .js,.ts,.vue",
    "lint": "eslint \"src/**/*.{ts}\" --max-warnings=0",
    "build": "node script/build.js",
    "prepare": "husky install",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "testdev": "jest --watch ",
    "lint-fix": "eslint --fix  --ext .js,.ts"
  },
  "author": "kakajun <253495832@qq.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:kakajun/auto-generate-md.git"
  },
  "devDependencies": {
    "@types/debug": "^4.1.8",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.11.0",
    "@types/prompts": "^2.4.1",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "arg": "5.0.2",
    "commander": "^9.4.1",
    "debug": "^4.3.4",
    "esbuild": "^0.15.11",
    "esbuild-plugin-d.ts": "^1.1.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "jest": "^29.2.0",
    "kolorist": "^1.6.0",
    "lint-staged": "^13.0.3",
    "node-environment": "^0.5.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.7.1",
    "prompts": "^2.4.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "prettier --write",
    "*.{ts,tsx}": "eslint --fix"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kakajun/auto-generate-md/issues"
  },
  "homepage": "https://github.com/kakajun/auto-generate-md",
  "files": [
    "bin",
    "lib"
  ],
  "dependencies": {
    "node-environment": "^0.5.1"
  }
}
