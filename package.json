{
  "name": "agmd",
  "version": "0.3.10",
  "description": "auto generate markdown for node, Classification of engineering documents, Absolute path to relative path",
  "keywords": [
    "node",
    "auto",
    "generate",
    "relative path",
    "md",
    "classification",
    "markdown"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "typings": "lib/index.d.ts",
  "bin": {
    "agmd": "./bin/bin.js"
  },
  "scripts": {
    "cli": "ts-node src/bin.ts",
    "dev": "npx nodemon src/commands/agmd.ts",
    "agmd": "npx agmd --ignore lib,node_modules,dist --include .js,.ts,.vue",
    "lint": "eslint --fix --ext .js,.ts ./src",
    "build": "node script/build.js",
    "prepare": "husky install",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "testdev": "jest --watch ",
    "lint-fix": "eslint --fix  --ext .js,.ts"
  },
  "author": "kakajun <253495832@qq.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:kakajun/auto-generate-md.git"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.1",
    "@types/prompts": "^2.4.8",
     "eslint-plugin-import": "^2.29.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "arg": "5.0.2",
    "commander": "^11.1.0",
    "debug": "^4.3.4",
    "esbuild": "^0.19.5",
    "esbuild-plugin-d.ts": "^1.1.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.1",
    "jest": "^29.2.0",
    "kolorist": "^1.8.0",
    "lint-staged": "^15.1.0",
    "node-environment": "^0.5.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "prompts": "^2.4.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "prettier --write",
    "*.{ts,tsx}": "eslint --fix"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kakajun/auto-generate-md/issues"
